<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_picture_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="7dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="@dimen/row_picture_img_width_height"
                android:layout_height="@dimen/row_picture_img_width_height"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/f_picture_list_iv_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/frame_show"
                    />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:src="@android:drawable/ic_menu_search" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/f_picture_list_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/row_picture_tv_name_textsize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/f_picture_list_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/row_picture_tv_date_textsize" />
            </LinearLayout>
        </LinearLayout>

        <com.dulcerefugio.app.entunombre.ui.widgets.CustomShareButton
            android:id="@+id/row_picture_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:duplicateParentState="true"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"></com.dulcerefugio.app.entunombre.ui.widgets.CustomShareButton>
    </FrameLayout>
</android.support.v7.widget.CardView>