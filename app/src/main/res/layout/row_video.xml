<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="7dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivVideoThumbnail"
            android:layout_width="@dimen/row_video_iv_width_height"
            android:layout_height="@dimen/row_video_iv_width_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitStart"
            android:layout_marginTop="@dimen/row_video_child_margin_top" />
        <RelativeLayout
            android:id="@+id/containerVideoDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/row_video_child_margin_top"
            android:layout_toRightOf="@+id/ivVideoThumbnail">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text=""
                android:textSize="@dimen/row_video_tv_name_textsize"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvTitle"
                android:layout_alignStart="@+id/tvTitle"
                android:layout_below="@+id/tvTitle"
                android:text="No hay descripcion disponible"
                android:textSize="@dimen/row_video_tv_description_textsize" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>